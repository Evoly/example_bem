mixin inputbox()
  +b.inputbox&attributes(attributes)
    block

mixin input()
  +b.INPUT.input&attributes(attributes)

mixin input-number()
  .input-numberbox
    span.input-numberbox__button.js-numberbox-minus
    input.input.input-numberbox__input.js-numberbox-input&attributes(attributes)
    span.input-numberbox__button.js-numberbox-plus

mixin textarea()
  +b.TEXTAREA.textarea&attributes(attributes)
    block

mixin select()
  select.select&attributes(attributes).js-select
    block

mixin checkbox(name, value, error, checked)
  +b.LABEL.checkradio&attributes(attributes)
    - var check = checked || '';
    +e.INPUT.input(name=name, value=value, check, type="checkbox")
    +e.SPAN.box
    +e.SPAN.content
      block
    if error
      +e.P.error(class=error[0])= error[1]

mixin checkbox_class(name, value, error, checked)
  +b.LABEL.checkradio&attributes(attributes)
    - var check = checked || '';
    +e.INPUT.input(name=name, value=value, check, type="checkbox").js-notrequire
    +e.SPAN.box
    +e.SPAN.content
      block
    if error
      +e.P.error(class=error[0])= error[1]

mixin radio(name, value, checked)
  +b.LABEL.checkradio&attributes(attributes)
    +e.INPUT.input(name=name, value=value, checked=checked, type="radio")
    +e.SPAN.box
    +e.SPAN.content
      block

mixin range()
  +b.range&attributes(attributes).js-range
    block
